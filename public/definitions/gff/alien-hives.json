  "specialRules": [
    {
      "name": "Pheromones",
      "description": "When this unit is activated, pick 2 friendly units within 12”. Next time that they fail a morale test, they take one wound and then all friendly units within 12” automatically pass morale tests until the end of the round."
    },
    {
      "name": "Psychic Barrier",
      "description": "This model may block spells as if it had the Psychic(2) special rule. If it is a Psychic then it gets +2 to spell block rolls."
    },
    {
      "name": "Shrouding Mist",
      "description": "When this unit is activated, pick 2 friendly units within 6”. Those units and all friendly units within 12” get Stealth next time they are shot at."
    }
  ],
  "spells": [
    {
      "name": "Terror",
      "test": "4+",
      "description": "Target enemy unit within 12” gets -2 its next morale test roll."
    },
    {
      "name": "Psychic Blast",
      "test": "4+",
      "description": "Target enemy unit within 12” takes 1 hit with AP(2) and Deadly(3)."
    },
    {
      "name": "Infuse Life",
      "test": "5+",
      "description": "Target friendly unit within 12” gets Regeneration next time it takes wounds."
    },
    {
      "name": "Shriek",
      "test": "5+",
      "description": "Target 2 enemy units within 6” take 3 automatic hits with AP(2) each."
    },
    {
      "name": "Animate Flora",
      "test": "6+",
      "description": "Target piece of terrain within 6” may be moved by up to 6” in any direction or may be removed from play."
    },
    {
      "name": "Overwhelm",
      "test": "6+",
      "description": "Target enemy model within 12” takes 3 automatic hits with AP(2)."
    }
