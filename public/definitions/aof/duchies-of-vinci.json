  "specialRules": [
    {
      "name": "Automa",
      "description": "Whenever this unit takes a morale test it is passed automatically. Then roll as many dice as remaining models/tough in the unit, and for each result of 1-2 the unit takes one wound, which can’t be regenerated."
    },
    {
      "name": "Ballistic Master",
      "description": "When the hero is activated pick one friendly Artillery unit within 6”, which may either get +2 to its shooting rolls or move up to 6” during its next activation."
    },
    {
      "name": "Captain",
      "description": "When the hero and his unit are activated pick one of the following orders, and they get one of these special rules until the end of the round"
    },
    {
      "name": "Repair",
      "description": "Once per turn, if within 2” of a unit with Tough, roll one die. On a 2+ you may repair 1 wound from the target."
    },
    {
      "name": "Signal Flare",
      "description": "When this unit is activated pick one enemy unit within 12”. The next friendly unit that shoots at it gets +1 to hit rolls."
    },
    {
      "name": "Takedown",
      "description": "When in melee, may pick one model from the enemy unit and roll one die. On a 2+ it takes 1 hit with Deadly(3)."
    },
    {
      "name": "Trickster",
      "description": "When this model fights in melee roll one die and apply one bonus"
    },
    {
      "name": "Terrifying",
      "description": "This model counts as having the Fear special rule, and gets +4 to its Fear rolls."
    },
    {
      "name": "Transport(X)",
      "description": "This model may transport up to X models. Units embark by moving into contact and may use any action to disembark but only move by 6”. Units may also be deployed within a transport. If a unit is inside a transport when it’s destroyed then it must take a Dangerous Terrain test, is immediately Wavering, and surviving models must be placed within 6” of the transport before it’s removed from play."
    }
  ],
  "spells": [
    {
      "name": "Fury Herbs",
      "test": "4+",
      "description": "Target friendly unit within 12” gets Furious next time it charges."
    },
    {
      "name": "Choking Fog",
      "test": "4+",
      "description": "Target enemy unit within 12” takes 3 automatic hits with AP(1)."
    },
    {
      "name": "Clearview Leaves",
      "test": "5+",
      "description": "Target friendly unit within 12” gets +6” range next time it shoots."
    },
    {
      "name": "Deep Rot",
      "test": "5+",
      "description": "Target enemy unit within 12” takes 1 hit with AP(4) and Deadly(3)."
    },
    {
      "name": "Mesmer Oils",
      "test": "6+",
      "description": "Target enemy unit within 12” must take a morale test. If failed you may force it to charge another enemy unit."
    },
    {
      "name": "Neurotoxin Gas",
      "test": "6+",
      "description": "Target enemy unit within 6” takes 1 automatic hit per model."
    }
